let mapleader = " "
let maplocalleader = " "

syntax on

set tabstop=4
set shiftwidth=4
set expandtab
set smartindent

set number
set nowrap

set mouse=a
set cursorline

set encoding=utf-8
set fileencoding=utf-8

set clipboard=unnamedplus

filetype on
filetype indent on
filetype plugin on

set incsearch
set hlsearch

set backspace=indent,eol,start

set showcmd
set ruler

set autoread

